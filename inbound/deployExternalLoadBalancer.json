{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "loadBalancerSku": {
            "type": "string",
            "allowedValues": [
                "Standard",
                "Basic"
            ],
            "metadata": {
                "description": "Standard or Basic"
            },
            "defaultValue": "Standard"
        },
        "loadBalancerName": {
            "type": "string",
            "metadata": {
                "description": "Name of the inbound load balancer"
            }
        },
        "ipName": {
            "type": "string",
            "metadata": {
                "description": "Name of frontend IP."
            }
        },
        "backendPoolName": {
            "type": "string",
            "metadata": {
                "description": "Name of VMSS backend pool."
            }
        },
        "healthProbeName": {
            "type": "string",
            "metadata": {
                "description": "Name of VMSS health probe."
            }
        }
    },
    "variables": {
        "location": "[resourceGroup().location]"
    },

    "resources": [
        { 
            "apiVersion": "2018-06-01",
            "type": "Microsoft.Network/loadBalancers",
            "name": "[parameters('loadBalancerName')]",
            "location": "[variables('location')]",
            "sku":
            {
                "name": "[parameters('loadBalancerSku')]"
            },
            "properties": {
                "frontendIPConfigurations":[
                    {
                        "name": "LoadBalancerFrontEnd",
                        "properties": {
                            "privateIPAllocationMethod": "Dynamic",
                            "publicIPAddress": {
                                "id": "[resourceId('Microsoft.Network/publicIPAddresses', parameters('ipName'))]"
                            },
                            "privateIPAddressVersion": "IPv4"
                        }
                    }
                ],
                "backendAddressPools": [
                    {
                        "name" : "[parameters('backendPoolName')]"
                    }
                ],
                "probes": [
                    {
                        "name": "[parameters('healthProbeName')]",
                        "properties": {
                            "protocol": "Tcp",
                            "port": 80,
                            "intervalInSeconds": 5,
                            "numberOfProbes": 2
                        }
                    }
                ],
                "loadBalancingRules": [],
                "outboundRules": [],
                "inboundNatPools": []
            }
        }
    ],
    "outputs" : {
    }
}
