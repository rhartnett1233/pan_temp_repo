{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "nsgName": {
            "type": "string",
            "defaultValue": "nsg-default1"
        },
        "virtualNetworkName": {
            "type": "string",
            "defaultValue": "vnet-FW",
            "metadata": {
                "description": "VNET name"
            }
        },
        "virtualNetworkAddressPrefix": {
            "type": "string",
            "defaultValue": "192.168.0.0/16",
            "metadata": {
                "description": "CIDR for vnet"
            }
        },
        "subnet0Name": {
            "type": "string",
            "defaultValue": "Mgmt-Subnet",
            "metadata": {
                "description": "Subnet for Management"
            }
        },
        "subnet1Name": {
            "type": "string",
            "defaultValue": "Data-Subnet",
            "metadata": {
                "description": "Subnet for Data"
            }
        },
        "subnet0Prefix": {
            "type": "string",
            "defaultValue": "None",
            "metadata": {
                "description": "Mgmt subnet CIDR"
            }
        },
        "subnet1Prefix": {
            "type": "string",
            "defaultValue": "None",
            "metadata": {
                "description": "Data subnet CIDR"
            }
        }
    },
    "variables": {
        "location": "[resourceGroup().location]",
        "rgname": "[resourceGroup().id]",
        "vnetname": "[parameters('virtualNetworkName')]",
        "vnetID": "[resourceId('Microsoft.Network/virtualNetworks',variables('vnetname'))]",
        "subnet0Ref": "[concat(variables('vnetID'),'/subnets/',parameters('subnet0Name'))]",
        "subnet1Ref": "[concat(variables('vnetID'),'/subnets/',parameters('subnet1Name'))]",
        "newVnetSubnets": [
            {
                "name": "[parameters('subnet0Name')]",
                "properties": {
                    "addressPrefix": "[if(equals(parameters('subnet0Prefix'), 'None'), json('null'), parameters('subnet0Prefix'))]",
                    "networkSecurityGroup": {
                            "id": "[resourceId('Microsoft.Network/networkSecurityGroups', parameters('nsgName'))]"
                    }
                }
            },
            {
                "name": "[parameters('subnet1Name')]",
                "properties": {
                    "addressPrefix": "[if(equals(parameters('subnet1Prefix'), 'None'), json('null'), parameters('subnet1Prefix'))]"
                }
            },
        ]
    },
    "resources": [
        {
            "name": "[variables('vnetname')]",
            "type": "Microsoft.Network/virtualNetworks",
            "location": "[variables('location')]",
            "apiVersion": "2015-06-15",
            "properties": {
                "addressSpace": {
                    "addressPrefixes": [
                        "[parameters('virtualNetworkAddressPrefix')]"
                    ]
                },
                "subnets": "[variables('newVnetSubnets')]"
            }
        }
    ],
    "outputs": {
        "vnetName": {
            "value": "[variables('vnetname')]",
            "type": "string"
        }
    }
}
